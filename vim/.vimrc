imap kj <Esc>
set nowrap
set autowrite 
set ruler
set showmode 
set noswapfile
set nowritebackup
set nobackup 
set icon
set hlsearch
set incsearch
set linebreak
set wrapscan
set hidden
set history=100
set ttyfast
set background=dark
set wildmenu
syntax on
set backspace=indent,eol,start
set shiftwidth=2
set autoindent 
set smartindent
set softtabstop=2
set tabstop=2
set expandtab
set mouse=a

map <space>e :Lexplore<cr>
map <tab> :tabnext<cr>
map <space>n :tabnew<cr>
map <space>c :tabclose<cr>
