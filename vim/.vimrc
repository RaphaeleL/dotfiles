imap kj <Esc>
set nowrap
set nonumber 
set norelativenumber 
set autowrite 
set ruler
set showmode 
set noswapfile
set nowritebackup
set nobackup 
set icon
set hlsearch
set incsearch
set linebreak
set wrapscan
set hidden
set history=100
set ttyfast
set background=dark
set wildmenu
set backspace=indent,eol,start
set shiftwidth=2
set autoindent 
set smartindent
set softtabstop=2
set tabstop=2
set expandtab
set mouse=a
set clipboard^=unnamed,unnamedplus
set autochdir
set viminfofile=NONE

colorscheme habax 
syntax on 

map <space>e :Lexplore<cr>
map <tab> :tabnext<cr>
map <space>n :tabnew<cr>
map <space>c :tabclose<cr>
